<% include ../partials/header %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-6">
            <h1 class="text-center">New Post</h1>
            <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label>Title <span class="required">*</span></label>
                    <input type="text" name="post[title]" value="<%= post.title %>" required>
                </div>
                <div class="field">
                    <label>URL</label>
                    <input type="url" name="post[url]" value="<%= post.url || '' %>">
                </div>
                <div class="field">
                    <label>Description</label>
                    <% console.log("post.description: ", post.description) %>
                    <textarea rows="2" name="post[description]"><%= post.description || '' %></textarea>
                </div>
                <div class="field">
                    <label>Image URL</label>
                    <input type="url" name="post[image]" value="<%= post.image || '' %>">
                </div>
                <button type="submit" class="btn btn-outline-secondary mt-1">Submit</button>
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>